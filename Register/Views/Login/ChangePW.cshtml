@model Register.Models.Info

@{
    ViewData["Title"] = "Checking";
}

<h1>PW Change</h1>

<h4>Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checking">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div>
                    <label asp-for="userPassword" class="control-label">new password</label>
                    <input type="password" id="newPW" asp-for="userPassword" class="form-control" runat="server" />
                    <span asp-validation-for="userPassword" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="control-label">check password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" runat="server" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="check" asp-route-Id="Model.Id" onclick="input()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


